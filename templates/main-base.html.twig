{% extends 'base.html.twig' %}

{% block title %}Main template{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('sidebar') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('sidebar') }}
{% endblock %}

{% block body %}
    <div class="d-flex h-100">
        <div>
            {% block sidebar %}
                {{ component('sidebar-menu', {items: getSidebarMenuItems()}) }}
            {% endblock %}
        </div>
        <div class="mt-3 ms-3 me-3 w-100">
            {% if error is defined and error %}
                <div class="alert alert-danger">{{ error|trans({}, 'security') }}</div>
            {% endif %}
            <div>
                {% block innerbody %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
